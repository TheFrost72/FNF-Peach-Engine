<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- _________________________ Application Settings _________________________ -->
	<app title="Friday Night Funkin': Neuro Engine" file="NeuroEngine" packageName="com.thefrost72.neuroengine" package="com.thefrost72.neuroengine" main="Main" version="0.2.8" company="TheFrost72" />
	<set name="APP_ID" value="0x0100f6c013bbc000" />
	<haxedef name="LINC_LUA_RELATIVE_DYNAMIC_LIB"/>
	<app preloader="flixel.system.FlxPreloader" />
	<set name="SWF_VERSION" value="11.8" />

	<!-- ______________________ PSYCH ENGINE CUSTOMIZATION ______________________ -->
	<define name="MODS_ALLOWED" if="mobile" />
	<define name="HSCRIPT_ALLOWED" if="mobile" />
	<define name="LUA_ALLOWED" if="mobile" />
	<define name="ACHIEVEMENTS_ALLOWED" />
	<define name="TRANSLATIONS_ALLOWED" />
	<define name="IRIS_DEBUG"/>
	<define name="MULTITHREADED_LOADING" />
	<define name="SHOW_LOADING_SCREEN" />
	<define name="PSYCH_WATERMARKS"/>
	
	<section if="officialBuild">
		<define name="TITLE_SCREEN_EASTER_EGG"/>
		<define name="BASE_GAME_FILES" />
		<define name="VIDEOS_ALLOWED" if="mobile" unless="32bits"/>
	</section>

	<!-- ____________________________ Window Settings ___________________________ -->
	<window width="1280" height="720" fps="60" background="#000000" hardware="true" vsync="false" allow-high-dpi="true" />
	<window if="mobile" orientation="landscape" fullscreen="true" width="0" height="0" resizable="false"/>

	<!-- _____________________________ Path Settings ____________________________ -->
	<set name="BUILD_DIR" value="export/debug" if="debug" />
	<set name="BUILD_DIR" value="export/release" unless="debug" />
	<set name="BUILD_DIR" value="export/32bit" if="32bits" />
	<classpath name="source" />

	<!-- __________________________ Game Assets & Etc. __________________________ -->
	<define name="CRASH_HANDLER" />

	<!-- Assets -->
	<assets path="assets/fonts" />
  <assets path="assets/shared" if="mobile"/>
  <assets path="assets/base_game/songs" if="mobile"         exclude="*.mp3" rename="assets/songs"/>
  <assets path="assets/base_game/shared" if="mobile" rename="assets/shared"/>
  <assets path="assets/base_game/videos" if="VIDEOS_ALLOWED" rename="assets/videos"/>
  <assets path="assets/base_game/week1" if="mobile" rename="assets/week1"/>
  <assets path="assets/base_game/week2" if="mobile" rename="assets/week2"/>
  <assets path="assets/base_game/week3" if="mobile" rename="assets/week3"/>
  <assets path="assets/base_game/week4" if="mobile" rename="assets/week4"/>
  <assets path="assets/base_game/week5" if="mobile" rename="assets/week5"/>
  <assets path="assets/base_game/week6" if="mobile" rename="assets/week6"/>
  <assets path="assets/base_game/week7" if="mobile" rename="assets/week7"/>
  <assets path="assets/base_game/weekend1" if="mobile" rename="assets/weekend1"/>

	<section if="TITLE_SCREEN_EASTER_EGG">
		<assets path="assets/secrets" rename="assets/shared" if="mobile"/>
	</section>

	<section if="TRANSLATIONS_ALLOWED">
		<assets path="assets/translations" rename="assets" if="mobile"/>
	</section>

	<define name="CHECK_FOR_UPDATES" if="desktop officialBuild"/>
	<section if="MODS_ALLOWED">
		<assets path='list.txt' rename='modsList.txt' />
	</section>
	<assets path='art/readme.txt' rename='do NOT readme.txt' />

	<!-- _______________________________ Libraries ______________________________ -->
	<haxelib name="flixel" version="5.6.1"/>
	<haxelib name="flixel-addons" version="3.2.2"/>
	<haxelib name="tjson" version="1.4.0"/>
	<haxelib name="linc_luajit" if="LUA_ALLOWED"/>
	<haxelib name="hscript-iris" if="HSCRIPT_ALLOWED" version="1.1.3"/>
	<haxelib name="hxvlc" if="VIDEOS_ALLOWED" version="2.0.1"/>
	<haxelib name="flxanimate"/>
	<haxelib name="hxcpp-debug-server" if="debug"/>
	<haxedef name="HXC_LIBVLC_LOGGING" if="VIDEOS_ALLOWED debug" />
	<haxedef name="HXVLC_NO_SHARE_DIRECTORY" if="VIDEOS_ALLOWED" />

	<!-- ______________________________ Haxedefines _____________________________ -->
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	<haxedef name="HXC_DEBUG_TRACE" if="debug" />
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	<haxedef name="NAPE_RELEASE_BUILD" unless="debug" />
	<haxedef name="HXCPP_CHECK_POINTER" if="CRASH_HANDLER" />
	<haxedef name="HXCPP_STACK_LINE" if="CRASH_HANDLER" />
	<haxedef name="HXCPP_STACK_TRACE" if="CRASH_HANDLER" />
	<haxedef name='no-deprecation-warnings' />
	<haxedef name="message.reporting" value="pretty" />
	<haxeflag name="--macro" value="allowPackage('flash')" />
	<haxeflag name="--macro" value="include('my.pack')" />
	<haxedef name="hscriptPos" if="HSCRIPT_ALLOWED" />

	<!-- _________________________________ Custom _______________________________ -->
	<certificate path="neuroengine.keystore" password="NeuroPass72!" alias="neuroengine" alias-password="NeuroPass72!" if="android"/>
<android>
    <icon path="art/icons/ic_foreground.png" foreground="true"/>
    <icon path="art/icons/ic_background.png" background="true"/>

    <ndk-build>
        <arg value="APP_STL=c++_shared"/>
    </ndk-build>
</android>
</project>
